<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WriteToCompassion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WriteToCompassion.Views"
    xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels">

    <TabBar>
        <Tab Title="Home" Icon="cloudicon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtsPage}"/>
        </Tab>
        <Tab Title="Library" Icon="papericon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtCollectionView}"/>
        </Tab>
        <Tab Title="New" Icon="writeicon.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewThoughtEditorView}"/>
        </Tab>
        <Tab Title="Settings" Icon="settingsicon.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}"/>
        </Tab>
    </TabBar>
</Shell>
