<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WriteToCompassion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WriteToCompassion.Views"
    xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels">

    <FlyoutItem Title="Home" Route="main">
        <Tab Title="Home" Route="home" Icon="cloudicon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtsPage}"/>
        </Tab>
        <Tab Title="New" Route="newthought" Icon="writeicon.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewThoughtEditorView}"/>
        </Tab>
        <Tab Title="Library" Route="library" Icon="papericon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtCollectionView}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        
    </FlyoutItem>
</Shell>
