<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WriteToCompassion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WriteToCompassion.Views"
    xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
    FlyoutHeaderBehavior="Default">


    <FlyoutItem Title="Home" Icon="cloudicon.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtsPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="My Thought Collection" Icon="papericon.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:ThoughtCollectionView}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="settingsicon.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}"/>
        </Tab>
    </FlyoutItem>

</Shell>
