<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             xmlns:models="clr-namespace:WriteToCompassion.Models"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodels:SettingsViewModel"
             x:Class="WriteToCompassion.Views.SettingsView"
             Shell.TabBarIsVisible="False"
             Title="Settings">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True"
                            IsVisible="True" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Grid
            HeightRequest="50"
            ColumnDefinitions="5*,*">
            <Label 
                Style="{StaticResource TitleViewLabel}"
                Text="Settings" 
                Grid.Column="0"
                VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>


    <VerticalStackLayout
        Padding="5">
        <Border Padding="10">
            <VerticalStackLayout>
                <Label
                    TextColor="Black"
                    Text="Theme"
                    FontSize="Large"
                    Padding="0,0,0,10"
                    FontAttributes="Bold" />
                <Label 
                    TextColor="Black"
                    Text="{Binding ThemeChoice}"
                    FontSize="Medium"/>
            </VerticalStackLayout>
            <Border.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="HandleButtonPopupButtonClicked"/>
            </Border.GestureRecognizers>
        </Border>
        <BoxView Style="{StaticResource Divider}"/>
        <Button Text="Show Tutorial On Start"
                Command="{Binding ToggleDisplayTutorialCommand}"/>
    </VerticalStackLayout>
</ContentPage>