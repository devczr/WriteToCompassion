<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             xmlns:views="clr-namespace:WriteToCompassion.Views"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:DataType="viewmodels:NewThoughtEditorViewModel"
             x:Class="WriteToCompassion.Views.NewThoughtEditorView"
             Title="New Thought">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"
                            IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <ContentPage.Resources>
        <Style x:Key="ValidButtonStyle" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
        </Style>
        <Style x:Key="InvalidButtonStyle" TargetType="Button">
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
        <Style x:Key="ValidEditorStyle" TargetType="Editor">
            <Setter Property="TextColor" Value="ForestGreen"/>
        </Style>
        <Style x:Key="InvalidEditorStyle" TargetType="Editor">
            <Setter Property="TextColor" Value="PaleVioletRed"/>
        </Style>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="50,*">
        <Grid
            Grid.Row="0"
            ColumnDefinitions="*,*,*,*">
            <Border BackgroundColor="Transparent"
                Grid.Row="0"
                Grid.ColumnSpan="5"/>

            <Button
                x:Name="cancelButton"
                Text="X"
                FontSize="30"
                BorderColor="Transparent"
                FontAttributes="Bold"
                TextColor="FloralWhite"
                BackgroundColor="Transparent"
                Grid.Column="0"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Command="{Binding CancelCommand}"/>

            <Button
                x:Name="saveButton"
                Text="Save"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                VerticalOptions="Center"
                HorizontalOptions="End"
                Command="{Binding ButtonSaveCommand}"/>


        </Grid>
        
        <Editor 
            x:Name="editor"
            Style="{StaticResource ThoughtEditor}"
            Grid.Row="1"
            Placeholder="{Binding PlaceholderText}">
            <Editor.Behaviors>
                <mct:EventToCommandBehavior 
                    EventName="TextChanged"
                    Command="{Binding UpdateThoughtContentCommand}"
                    CommandParameter="{Binding Source={x:Reference editor}, Path=Text}"/>
                <mct:TextValidationBehavior
                    
                    MinimumLength="10"
                    MaximumLength="500"
                    DecorationFlags="Trim"
                    InvalidStyle="{StaticResource InvalidEditorStyle}"
                    ValidStyle="{StaticResource ValidEditorStyle}"
                    Flags="ValidateOnValueChanged">
                </mct:TextValidationBehavior>
            </Editor.Behaviors>
        </Editor>
    </Grid>
</ContentPage>