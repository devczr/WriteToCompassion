<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             xmlns:views="clr-namespace:WriteToCompassion.Views"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:DataType="viewmodels:NewThoughtEditorViewModel"
             x:Class="WriteToCompassion.Views.NewThoughtEditorView"
             Shell.TabBarIsVisible="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"
                            IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Grid
            HeightRequest="50"
            HorizontalOptions="Fill"
            ColumnDefinitions="*,*"
            Padding="0,0,20,0">
            <Label
                Text="x"
                Style="{StaticResource XLabel}"
                WidthRequest="50"
                HorizontalOptions="Start"
                VerticalOptions="Fill"
                VerticalTextAlignment="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CancelCommand}" NumberOfTapsRequired="1"/>
                </Label.GestureRecognizers>
            </Label>
            <Button
                x:Name="saveButton"
                Text="Save"
                Grid.Column="1"
                VerticalOptions="End"
                HorizontalOptions="End"
                Command="{Binding ButtonSaveCommand}"/>
        </Grid>
    </Shell.TitleView>

    <Grid>
        <Editor 
            x:Name="editor"
            Style="{StaticResource ThoughtEditor}"
            Grid.Row="1"
            Placeholder="{Binding PlaceholderText}"
            FontAttributes="{Binding EditorFontAttribute}">
            <FlyoutBase.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Bold" Command="{Binding BoldCommand}"/>
                    <MenuFlyoutItem Text="Italicized" Command="{Binding ItalicisedCommand}"/>
                    <MenuFlyoutItem Text="Default" Command="{Binding DefaultCommand}"/>
                </MenuFlyout>
            </FlyoutBase.ContextFlyout>
            <Editor.Behaviors>
                <mct:EventToCommandBehavior 
                    EventName="TextChanged"
                    Command="{Binding UpdateThoughtContentCommand}"
                    CommandParameter="{Binding Source={x:Reference editor}, Path=Text}"/>
                <mct:TextValidationBehavior
                    
                    MinimumLength="10"
                    MaximumLength="500"
                    DecorationFlags="Trim"
                    InvalidStyle="{StaticResource InvalidEditorStyle}"
                    ValidStyle="{StaticResource ValidEditorStyle}"
                    Flags="ValidateOnValueChanged">
                </mct:TextValidationBehavior>
            </Editor.Behaviors>
        </Editor>
    </Grid>
</ContentPage>