<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             x:DataType="viewmodels:NewThoughtEditorViewModel"
             x:Class="WriteToCompassion.Views.NewThoughtEditorView"
             Title="New Thought">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"
                            IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="50,*">
        <Grid
            Grid.Row="0"
            ColumnDefinitions="*,*,*,*,*">
            <Border BackgroundColor="Pink"
                Grid.Row="0"
                Grid.ColumnSpan="5"/>
            <VerticalStackLayout 
            Grid.Column="0"
            IsClippedToBounds="True">
                <ImageButton
                    x:Name="savebutton"
                Scale="0.5"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Source="checkicon.png"
                Aspect="Center"
                Command="{Binding SaveAndNavigateToThoughtsCommand}"/>
            </VerticalStackLayout>

            <ImageButton
            Grid.Column="3"
            Source="xicon.png"
            Scale="0.5"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Command="{Binding CancelCommand}"/>

            <ImageButton
            Grid.Column="4"
            Source="trashicon.png"
            Scale="0.5"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Command="{Binding DeleteThoughtCommand}"/>
        </Grid>
        
        <Editor 
            x:Name="editor"
            mct:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference savebutton}"
            MaxLength="500"
            Grid.Row="1"
            AutoSize="TextChanges"
            BackgroundColor="ForestGreen"
            Placeholder="{Binding PlaceholderText}">
            <Editor.Behaviors>
                <mct:EventToCommandBehavior EventName="TextChanged"
                                            Command="{Binding UpdateThoughtContentCommand}"
                                            CommandParameter="{Binding Source={x:Reference editor}, Path=Text}"/>
            </Editor.Behaviors>

        </Editor>
    </Grid>
</ContentPage>