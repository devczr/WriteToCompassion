<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             x:DataType="viewmodels:NewThoughtEditorViewModel"
             x:Class="WriteToCompassion.Views.NewThoughtEditorView"
             Title="New Thought">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"
                            IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="50,*">
        <Grid
            Grid.Row="0"
            ColumnDefinitions="*,*,*,*">
            <Border BackgroundColor="Transparent"
                Grid.Row="0"
                Grid.ColumnSpan="5"/>

            <ImageButton
                Grid.Column="0"
                BackgroundColor="Red"
                Source="xicon.png"
                Scale="0.5"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Command="{Binding CancelCommand}"/>
            
            <Button
                Text="Save"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                x:Name="savebutton"
                VerticalOptions="Center"
                HorizontalOptions="End"
                Command="{Binding SaveAndNavigateToThoughtsCommand}"/>

        </Grid>
        
        <Editor 
            x:Name="editor"
            Style="{StaticResource ThoughtEditor}"
            Grid.Row="1"
            Placeholder="{Binding PlaceholderText}">
            <Editor.Behaviors>
                <mct:EventToCommandBehavior EventName="TextChanged"
                                            Command="{Binding UpdateThoughtContentCommand}"
                                            CommandParameter="{Binding Source={x:Reference editor}, Path=Text}"/>
            </Editor.Behaviors>

        </Editor>
    </Grid>
</ContentPage>