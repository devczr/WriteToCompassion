<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:WriteToCompassion.ViewModels"
             x:DataType="viewmodels:NewThoughtEditorViewModel"
             x:Class="WriteToCompassion.Views.NewThoughtEditorView"
             Title="New Thought"
             Shell.FlyoutBehavior="Disabled">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False"
                            IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="50,*"
          ColumnDefinitions="*,*,*,*,*">
        <Border BackgroundColor="Pink"
                Grid.Row="0"
                Grid.ColumnSpan="5"/>
        <ImageButton
            Grid.Column="0"
                Scale="0.5"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Source="backarrow.png"
                Aspect="AspectFit"
                Command="{Binding SaveAndNavigateToThoughtsCommand}"/>

        <ImageButton
            Grid.Column="4"
            Grid.Row="0"
            Source="trashicon.png"
            Scale="0.5"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Command="{Binding DeleteThoughtCommand}"/>
        <Editor 
            x:Name="editor"
            Grid.Row="1"
            Grid.ColumnSpan="5"
            Placeholder="Enter your new thought here">
            <Editor.Behaviors>
                <mct:EventToCommandBehavior EventName="TextChanged"
                                            Command="{Binding UpdateThoughtContentCommand}"
                                            CommandParameter="{Binding Source={x:Reference editor}, Path=Text}"/>
            </Editor.Behaviors>

        </Editor>
    </Grid>
</ContentPage>